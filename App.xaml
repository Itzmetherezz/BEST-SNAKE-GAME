<Application x:Class="SNAKE_GAME.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SNAKE_GAME"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="BackgroundColor">#301934</SolidColorBrush>
        <SolidColorBrush x:Key="GridBackgroundColor">#301934</SolidColorBrush>
        <SolidColorBrush x:Key="GridLineColor">#4f4867</SolidColorBrush>
        <SolidColorBrush x:Key="TextColor">#FF0000</SolidColorBrush>
        <SolidColorBrush x:Key="OverlayColor">#7F000000</SolidColorBrush>
        <FontFamily x:Key="MainFont"></FontFamily>

    </Application.Resources>
</Application>
